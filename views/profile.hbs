                    <div class="alert alert-danger" role="alert">Username has already been taken or is invalid, please try again</div>
                  {{/if}}
                  <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                      <form role="form" method="post" action="/uname">
                        <div class="form-group">
                          <input type="text" name="uname" class="form-control" placeholder="Enter Username">
                          <br>
                          <button type="submit" id="submitButton" class="btn btn-primary btn-lg">Go!</button>
                        </div>
                      </form>
                    </div>
                  </div><!--End Form row-->
                </div>
              </div>
            {{/if}}

        </div>
