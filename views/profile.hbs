<!-- Profile Section -->
<section id="profile" class="container content-section text-center">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h2>Yo!</h2>
            <p>The event starts 22th January</p>
            {{#if uname}}
                <p class="lead wow fadeIn" data-wow-delay="0.5s">Hey, {{uname}}! The game is on :D</p>
                <!-- <a href="/play"><button type="submit" class="btn btn-primary btn-lg">Lets Hunt Some stars</button></a> -->
